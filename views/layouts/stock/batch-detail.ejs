<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Batch Details</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>

<header class="page-header">
    <h1>Batch Details</h1>
    <p class="subtitle">Laboratory stock batch information</p>
</header>

<main class="container">

    <a href="/" class="back-link">‚Üê Back to Home</a>

    <% batch.forEach(function(row) { %>
        <section class="details-card">

            <!-- Item identity -->
            <div class="details-header">
                <h2><%= row.name %></h2>
                <span class="status <%= row.is_active ? 'active' : 'inactive' %>">
                    <%= row.is_active ? "Active" : "Inactive" %>
                </span>
            </div>

            <!-- Information grid -->
            <div class="details-grid">

                <div class="info-block">
                    <span class="label">Batch Number</span>
                    <span class="value mono"><%= row.batch_number %></span>
                </div>

                <div class="info-block">
                    <span class="label">Quantity Remaining</span>
                    <span class="value qty <%= row.quantity_remaining <= 0 ? 'qty-zero' : '' %>">
                        <%= row.quantity_remaining %>
                    </span>
                </div>

                <div class="info-block">
                    <span class="label">Expiry Date</span>
                    <span class="value <%= new Date(row.expiry_date) < new Date() ? 'expired' : '' %>">
                        <%= new Date(row.expiry_date).toLocaleDateString() %>
                    </span>
                </div>

                <div class="info-block">
                    <span class="label">Received Date</span>
                    <span class="value">
                        <%= new Date(row.received_date).toLocaleDateString() %>
                    </span>
                </div>

                <div class="info-block">
                    <span class="label">Storage Condition</span>
                    <span class="value"><%= row.storage_condition %></span>
                </div>

            </div>

        </section>
    <% }) %>

</main>

</body>
</html>
