<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Batch details</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
     <a href="/" class="back-link">‚Üê Back to Home</a>

    <section class="table-card">

        <table class="lab-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Storage Condition</th>
                    <th>Batch Number</th>
                    <th>Expiry Date</th>
                    <th>Qty Remaining</th>
                    <th>Received Date</th>
                    <th>Is_active</th>
                </tr>
            </thead>

            <tbody>
                <% batch.forEach(function(row) { %>
                    <tr class="<%= row.is_active ? '' : 'row-inactive' %>">

                        <td>
                            <div class="item-name"><%= row.name %></div>
                            <div class="item-meta">
                                Storage: <%= row.item_storage_condition %>
                            </div>
                        </td>

                        <td>
                            <div><%= row.storage_condition %></div>
                        </td>

                        <td><%= row.batch_number %></td>

                        <td class="<%= row.expiry_date%>"><%= new Date(row.expiry_date).toLocaleDateString() %></td>

                        <td class="mono">
                            <%= row.quantity_remaining %>
                        </td>

                        <td class="<%= new Date(row.batch_expiry) < new Date() ? 'expired' : '' %>">
                            <%= row.received_date %>
                        </td>

                        <td>
                            <span class="status <%= row.is_active ? 'active' : 'inactive' %>">
                                <%= row.is_active ? "Active" : "Inactive" %>
                            </span>
                        </td>

                    </tr>
                <% }) %>
            </tbody>
        </table>

    </section>

</body>
</html>