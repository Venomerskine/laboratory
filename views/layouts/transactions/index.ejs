<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stock Transaction</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>

<header class="page-header">
    <h1>Stock Transaction</h1>
    <p class="subtitle">Record receipt, issue, adjustment, expiry, or return</p>
</header>

<main class="container">

    <a href="/"><button class="back-btn">Home</button></a>

    <section class="form-card">

        <form action="transactions" method="POST" class="lab-form">

            <!-- Department -->
            <div class="form-group">
                <label>Department</label>
                <select name="department_name" required>
                    <option value="">-- Select department --</option>
                    <% itemBatchTransaction.forEach(dept => { %>
                        <option value="<%= dept.department_name %>">
                            <%= dept.department_name %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <!-- Batch -->
            <div class="form-group">
                <label>Batch</label>
                <select name="batch_number" required>
                    <option value="">-- Select batch --</option>
                    <% itemBatchTransaction.forEach(row => { %>
                        <option value="<%= row.batch_number %>">
                            <%= row.batch_number %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <!-- Type -->
            <div class="form-group">
                <label>Transaction Type</label>
                <select name="transaction_type" required>
                    <option value="">-- Select type --</option>
                    <option>RECEIPT</option>
                    <option>ISSUE</option>
                    <option>ADJUSTMENT</option>
                    <option>EXPIRED</option>
                    <option>RETURN</option>
                </select>
            </div>

            <!-- Quantity -->
            <div class="form-group">
                <label>Quantity</label>
                <input type="number" name="quantity" min="1" required placeholder="Enter quantity">
            </div>

            <!-- Reason -->
            <div class="form-group">
                <label>Reason / Notes</label>
                <textarea name="reason" rows="3" placeholder="Optional explanation"></textarea>
            </div>

            <button type="submit" class="primary-btn">Record Transaction</button>

        </form>
    </section>
<section class="surface" style="margin-top: 24px;">

    <div class="details-header">
        <h2>Transaction History</h2>
        <span class="item-meta"><%= transactions.length %> record(s)</span>
    </div>

    <% if (transactions.length === 0) { %>

        <p class="item-meta">No transactions recorded for this batch.</p>

    <% } else { %>

        <div class="timeline">

            <% transactions.forEach(function(tx) { %>
                <div class="timeline-item">

                    <div class="timeline-marker
                        <%= tx.transaction_type === 'RECEIPT' ? 'marker-receipt' :
                            tx.transaction_type === 'ISSUE' ? 'marker-issue' :
                            tx.transaction_type === 'EXPIRED' ? 'marker-expired' :
                            'marker-adjustment' %>">
                    </div>

                    <div class="timeline-content">

                        <div class="timeline-top">
                            <strong><%= tx.transaction_type %></strong>
                            <span class="timeline-date">
                                <%= new Date(tx.transaction_date).toLocaleString() %>
                            </span>
                        </div>

                        <div class="timeline-meta">
                            Dept: <%= tx.department %> •
                            Item: <%= tx.item %> •
                            Batch: <span class="mono"><%= tx.batch_number %></span>
                        </div>

                        <% if (tx.reason) { %>
                            <p class="timeline-reason"><%= tx.reason %></p>
                        <% } %>

                    </div>

                </div>
            <% }) %>

        </div>

    <% } %>

</section>


</main>

</body>
</html>
